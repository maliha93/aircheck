                <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
                <item name="colorAccent">@color/mainWhite</item>
                <item name="android:colorForeground">@color/abc_color_highlight_material</item>
                <item name="colorPrimary">@color/mainKolaPata</item>
                <item name="android:colorBackground">@color/mainKolaPata</item>
                <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
